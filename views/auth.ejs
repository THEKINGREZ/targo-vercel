<%- include('partials/header') %>

<div class="container mx-auto px-4 py-16 flex justify-center">
    <div class="bg-zinc-800 p-8 rounded-xl shadow-2xl w-full max-w-md">
        
        <!-- Dynamic Title -->
        <h1 class="text-3xl font-bold text-sky-400 mb-2 text-center">
            <% if (state === 'register') { %>
                ایجاد حساب جدید
            <% } else if (state === 'login') { %>
                خوش آمدید!
            <% } else if (state === 'forgot_password') { %>
                فراموشی رمز عبور
            <% } else if (state === 'reset_password') { %>
                ایجاد رمز عبور جدید
            <% } else if (state === 'message') { %>
                <%= pageTitle || 'پیام' %>
            <% } else { %>
                ورود یا ثبت‌نام
            <% } %>
        </h1>

        <!-- This container shows EITHER the final message OR the form prompt -->
        <div class="text-zinc-400 text-center mb-8">
            <% if (typeof message !== 'undefined' && message) { %>
                <!-- Final Success Message View -->
                <div class="bg-green-500/20 border border-green-500/50 text-green-300 px-4 py-3 rounded-lg relative text-sm" role="alert">
                    <p><%= message %></p>
                    <p class="mt-2">لطفاً پوشه اسپم خود را نیز بررسی کنید.</p>
                </div>
            <% } else if (typeof error !== 'undefined' && error) { %>
                 <!-- Error Message View -->
                <div class="bg-red-500/20 border border-red-500/50 text-red-300 px-4 py-3 rounded-lg relative text-sm" role="alert">
                    <%= error %>
                </div>
            <% } else { %>
                <!-- Default Prompt View -->
                <p>
                    <% if (state === 'register') { %>
                        فقط یک قدم تا عضویت باقی مانده!
                    <% } else if (state === 'login') { %>
                        رمز عبور خود را وارد کنید
                    <% } else if (state === 'forgot_password') { %>
                        ایمیل خود را برای دریافت لینک بازنشانی وارد کنید.
                    <% } else if (state === 'reset_password') { %>
                        رمز عبور جدید خود را وارد کنید.
                    <% } else { %>
                        نام کاربری، ایمیل یا شماره تلفن خود را وارد کنید
                    <% } %>
                </p>
            <% } %>
        </div>

        <!-- The Main Form (is only hidden if a final success message is shown) -->
        <% if (state !== 'message') { %>
            <form method="POST" action="/auth" class="space-y-6">
                <input type="hidden" name="redirect" value="<%= typeof redirect !== 'undefined' ? redirect : '/' %>">
                <input type="hidden" name="state" value="<%= state %>">
                <input type="hidden" name="token" value="<%= typeof token !== 'undefined' ? token : '' %>">

                <!-- Identifier Field (Email/Phone/Username) -->
                <% if (state !== 'reset_password') { %>
                    <div>
                        <label for="identifier" class="block text-sm font-medium text-zinc-300 mb-1">نام کاربری، ایمیل یا شماره تلفن</label>
                        <input type="text" name="identifier" id="identifier" required
                               class="w-full px-4 py-2.5 border border-zinc-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 bg-zinc-700 text-zinc-100 placeholder-zinc-400 
                                      <% if (state !== 'initial' && state !== 'forgot_password') { %> bg-zinc-900 text-zinc-400 cursor-not-allowed <% } %>"
                               value="<%= typeof identifier !== 'undefined' ? identifier : '' %>"
                               <% if (state !== 'initial' && state !== 'forgot_password') { %> readonly <% } %>>
                    </div>
                <% } %>
                
                <!-- Username Field (for registration) -->
                <% if (state === 'register') { %>
                    <div>
                        <label for="app_username" class="block text-sm font-medium text-zinc-300 mb-1">نام کاربری</label>
                        <input type="text" name="app_username" id="app_username" required autofocus
                               class="w-full px-4 py-2.5 border border-zinc-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 bg-zinc-700 text-zinc-100">
                    </div>
                <% } %>

                <!-- Password Fields -->
                <% if (state === 'login' || state === 'register' || state === 'reset_password') { %>
                    <div>
                        <label for="password" class="block text-sm font-medium text-zinc-300 mb-1"><%= state === 'reset_password' ? 'رمز عبور جدید' : 'رمز عبور' %></label>
                        <input type="password" name="password" id="password" required 
                               <% if (state === 'login' || state === 'reset_password') { %> autofocus <% } %>
                               class="w-full px-4 py-2.5 border border-zinc-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 bg-zinc-700 text-zinc-100">
                    </div>
                <% } %>
                
                <% if (state === 'reset_password') { %>
                     <div>
                        <label for="confirm_password" class="block text-sm font-medium text-zinc-300 mb-1">تکرار رمز عبور جدید</label>
                        <input type="password" name="confirm_password" id="confirm_password" required class="w-full px-4 py-2.5 border border-zinc-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-sky-500 bg-zinc-700 text-zinc-100">
                    </div>
                <% } %>
                
                <div>
                    <button type="submit" class="w-full bg-sky-500 hover:bg-sky-600 text-white font-semibold py-3 px-6 rounded-lg text-lg transition-colors">
                        <% if (state === 'register') { %> ثبت‌نام و ورود
                        <% } else if (state === 'forgot_password') { %> ارسال لینک بازنشانی
                        <% } else if (state === 'reset_password') { %> ذخیره رمز جدید
                        <% } else { %> ادامه <% } %>
                    </button>
                </div>
            </form>
        <% } %>

        <!-- Bottom Links -->
        <div class="text-center text-sm mt-6">
            <% if (state === 'login') { %>
                <a href="/auth?state=forgot_password&identifier=<%= encodeURIComponent(identifier || '') %>" class="text-zinc-400 hover:text-sky-400">رمز عبور خود را فراموش کرده‌اید؟</a>
            <% } else { %>
                <a href="/auth" class="text-zinc-400 hover:text-sky-400">بازگشت به صفحه ورود</a>
            <% } %>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
