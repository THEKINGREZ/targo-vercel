
<%- include('partials/header') %>

<style>
    .gradient-bg {
        background: linear-gradient(135deg, var(--primary-bg) 0%, #0f0f10 50%, var(--secondary-bg) 100%);
    }

    .card {
        background: var(--secondary-bg);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        border-color: var(--accent-color);
    }

    .hero-section {
        background: linear-gradient(135deg, var(--secondary-bg) 0%, var(--accent-bg) 100%);
        border-radius: 24px;
        position: relative;
        overflow: hidden;
    }

    .hero-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .section-title {
        font-size: 1.75rem;
        font-weight: 600;
        background: linear-gradient(135deg, var(--text-primary), var(--text-secondary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 2rem;
    }

    .manga-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 2rem;
        padding: 0 1rem;
    }

    .manga-card {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .manga-card:hover {
        transform: scale(1.05);
    }

    .manga-image {
        aspect-ratio: 2/3;
        object-fit: cover;
        width: 100%;
        border-radius: 12px;
    }

    .stats-card {
        background: linear-gradient(135deg, var(--secondary-bg), var(--accent-bg));
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .stats-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(99, 102, 241, 0.05), rgba(139, 92, 246, 0.05));
    }

    .stats-number {
        font-size: 2.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .floating-elements {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }

    .floating-elements::before,
    .floating-elements::after {
        content: '';
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(45deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
        animation: float 6s ease-in-out infinite;
    }

    .floating-elements::before {
        width: 100px;
        height: 100px;
        top: 20%;
        right: 10%;
        animation-delay: 0s;
    }

    .floating-elements::after {
        width: 60px;
        height: 60px;
        bottom: 30%;
        left: 15%;
        animation-delay: 3s;
    }

    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(180deg); }
    }

    @keyframes shimmer {
        0% { background-position: -1000px 0; }
        100% { background-position: 1000px 0; }
    }

    .shimmer {
        background: linear-gradient(90deg, var(--secondary-bg) 25%, var(--accent-bg) 50%, var(--secondary-bg) 75%);
        background-size: 1000px 100%;
        animation: shimmer 2s infinite;
    }
</style>

<div class="gradient-bg min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-12 space-y-16">

        <!-- Hero Section -->
        <section class="hero-section p-12 text-center relative">
            <div class="floating-elements"></div>
            <div class="hero-content">
                <h1 class="text-5xl md:text-6xl font-bold mb-6 leading-tight">
                    <span class="bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">
                        دنیای مانگا
                    </span>
                </h1>
                <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto leading-relaxed">
                    بهترین مجموعه مانگاهای ترجمه شده را در یک مکان کشف کنید
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="/mangas" class="btn-primary px-8 py-4 text-lg">
                        مشاهده مانگاها
                    </a>
                    <a href="/channels" class="border border-gray-600 text-white px-8 py-4 rounded-xl hover:bg-gray-800 transition-colors">
                        کانال‌های ترجمه
                    </a>
                </div>
            </div>
        </section>

        <!-- Stats Section -->
        <section id="stats-section">
            <%- include('partials/_stats') %>
        </section>

        <!-- Latest Updates -->
        <section class="space-y-8">
            <div class="flex justify-between items-center">
                <h2 class="section-title">آخرین بروزرسانی‌ها</h2>
                <a href="/mangas?sort_by=updated_at_desc" 
                   class="text-indigo-400 hover:text-indigo-300 transition-colors font-medium">
                    مشاهده همه →
                </a>
            </div>
            <div id="latest-updates-carousel" class="manga-grid">
                <!-- Skeleton loaders -->
                <% for (let i = 0; i < 8; i++) { %>
                    <div class="card p-0">
                        <div class="shimmer aspect-[2/3] rounded-t-xl"></div>
                        <div class="p-4">
                            <div class="shimmer h-4 rounded mb-2"></div>
                            <div class="shimmer h-3 rounded w-2/3"></div>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Recent Mangas -->
        <section class="space-y-8">
            <div class="flex justify-between items-center">
                <h2 class="section-title">جدیدترین‌ها</h2>
                <a href="/mangas" 
                   class="text-indigo-400 hover:text-indigo-300 transition-colors font-medium">
                    مشاهده همه →
                </a>
            </div>
            <div id="recent-mangas-carousel" class="manga-grid">
                <!-- Skeleton loaders -->
                <% for (let i = 0; i < 8; i++) { %>
                    <div class="card p-0">
                        <div class="shimmer aspect-[2/3] rounded-t-xl"></div>
                        <div class="p-4">
                            <div class="shimmer h-4 rounded mb-2"></div>
                            <div class="shimmer h-3 rounded w-2/3"></div>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Popular Mangas -->
        <section class="space-y-8">
            <div class="flex justify-between items-center">
                <h2 class="section-title">محبوب‌ترین‌ها</h2>
                <a href="/mangas?sort_by=view_count_desc" 
                   class="text-indigo-400 hover:text-indigo-300 transition-colors font-medium">
                    مشاهده همه →
                </a>
            </div>
            <div id="popular-mangas-carousel" class="manga-grid">
                <!-- Skeleton loaders -->
                <% for (let i = 0; i < 8; i++) { %>
                    <div class="card p-0">
                        <div class="shimmer aspect-[2/3] rounded-t-xl"></div>
                        <div class="p-4">
                            <div class="shimmer h-4 rounded mb-2"></div>
                            <div class="shimmer h-3 rounded w-2/3"></div>
                        </div>
                    </div>
                <% } %>
            </div>
        </section>

    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    
    function getStatusInfo(status) {
        switch (status) {
            case 'Ongoing': return { text: 'درحال پخش', classes: 'bg-green-500/20 text-green-300 border border-green-500/50' };
            case 'Completed': return { text: 'پایان یافته', classes: 'bg-blue-500/20 text-blue-300 border border-blue-500/50' };
            case 'Hiatus': return { text: 'وقفه', classes: 'bg-yellow-500/20 text-yellow-300 border border-yellow-500/50' };
            case 'Dropped': return { text: 'رها شده', classes: 'bg-red-500/20 text-red-300 border border-red-500/50' };
            case 'Upcoming': return { text: 'به زودی', classes: 'bg-purple-500/20 text-purple-300 border border-purple-500/50' };
            default: return { text: status || 'نامشخص', classes: 'bg-gray-500/20 text-gray-300 border border-gray-500/50' };
        }
    }

    function createMangaCard(manga) {
        const statusInfo = getStatusInfo(manga.status);
        
        return `
            <div class="manga-card card p-0 group">
                <a href="/manga/${manga.id}" class="block">
                    <div class="relative">
                        <img src="${manga.cover_image_url || 'https://placehold.co/300x450/1a1a1d/6366f1?text=کاور'}"
                             alt="${manga.title}"
                             class="manga-image">
                        
                        <div class="absolute top-3 right-3">
                            <span class="text-xs px-2 py-1 rounded-lg font-medium ${statusInfo.classes}">
                                ${statusInfo.text}
                            </span>
                        </div>

                        <div class="absolute top-3 left-3 bg-black/50 backdrop-blur-sm text-white text-xs px-2 py-1 rounded-lg">
                            👁 ${manga.view_count ? manga.view_count.toLocaleString('fa-IR') : '0'}
                        </div>

                        <div class="absolute bottom-3 right-3 bg-indigo-500/80 backdrop-blur-sm text-white text-xs px-2 py-1 rounded-lg font-medium">
                            ${manga.latest_chapter_number || '?'} چپتر
                        </div>
                    </div>
                    
                    <div class="p-4">
                        <h3 class="font-semibold text-white mb-2 group-hover:text-indigo-400 transition-colors line-clamp-2">
                            ${manga.title}
                        </h3>
                        <p class="text-sm text-gray-400">
                            ${manga.source_channel_name || 'نامشخص'}
                        </p>
                    </div>
                </a>
            </div>
        `;
    }

    function createChannelCard(channel) {
        return `
            <div class="card p-6 text-center group hover-lift">
                <a href="/channel/${channel.id}" class="block">
                    <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 overflow-hidden">
                        <img src="${channel.profile_image_url || 'https://placehold.co/64x64/6366f1/ffffff?text=' + encodeURIComponent(channel.name.substring(0,1))}"
                             alt="${channel.name}"
                             class="w-full h-full object-cover">
                    </div>
                    <h3 class="font-semibold text-white mb-2 group-hover:text-indigo-400 transition-colors">
                        ${channel.name}
                    </h3>
                    <p class="text-sm text-gray-400">
                        ${channel.manga_count || 0} اثر
                    </p>
                </a>
            </div>
        `;
    }
    
    function populateCarousel(carouselElement, items, cardCreatorFunction) {
        if (!carouselElement || !items || items.length === 0) {
            if(carouselElement) carouselElement.innerHTML = '<p class="text-gray-400 text-center col-span-full py-12">موردی برای نمایش یافت نشد.</p>';
            return;
        }
        carouselElement.innerHTML = items.map(cardCreatorFunction).join('');
    }

    function animateCount(elementId, finalValue) {
        const element = document.getElementById(elementId);
        if (!element) return;
        
        let startValue = 0;
        const duration = 2000;
        const stepTime = Math.max(1, Math.floor(duration / finalValue));
        
        const timer = setInterval(() => {
            startValue += Math.ceil(finalValue / (duration / stepTime));
            if (startValue >= finalValue) {
                startValue = finalValue;
                clearInterval(timer);
            }
            element.textContent = startValue.toLocaleString('fa-IR');
        }, stepTime);
    }

    // Fetch homepage data
    fetch('/api/home-data')
        .then(response => {
            if (!response.ok) throw new Error(`HTTP error! status: ${response.status}`);
            return response.json();
        })
        .then(data => {
            if (data.success) {
                populateCarousel(document.getElementById('recent-mangas-carousel'), data.recentMangas, createMangaCard);
                populateCarousel(document.getElementById('popular-mangas-carousel'), data.popularMangas, createMangaCard);
                populateCarousel(document.getElementById('latest-updates-carousel'), data.latestUpdates, createMangaCard);

                if (data.siteStats) {
                    animateCount('stats-manga-count', data.siteStats.mangaCount);
                    animateCount('stats-chapter-count', data.siteStats.chapterCount);
                    animateCount('stats-channel-count', data.siteStats.channelCount);
                }
            } else {
                throw new Error(data.message || 'Failed to load data.');
            }
        })
        .catch(error => {
            console.error('Error fetching homepage data:', error);
            const errorMsg = '<p class="text-red-400 text-center col-span-full py-12">خطا در بارگذاری اطلاعات.</p>';
            ['latest-updates-carousel', 'recent-mangas-carousel', 'popular-mangas-carousel'].forEach(id => {
                const element = document.getElementById(id);
                if (element) element.innerHTML = errorMsg;
            });
        });
});
</script>

<%- include('partials/footer') %>
