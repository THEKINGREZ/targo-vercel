            if (Math.abs(e.deltaX) > Math.abs(e.deltaY)) return;
            
            e.preventDefault();
            
            if (!isScrolling) {
                isScrolling = true;
                carousel.scrollBy({
                    left: e.deltaY > 0 ? 200 : -200,
                    behavior: 'smooth'
                });
                
