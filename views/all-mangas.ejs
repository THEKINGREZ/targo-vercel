
<%- include('partials/header') %>

<div class="container mx-auto px-2 sm:px-4 py-8">
    <!-- هدر صفحه -->
    <div class="text-center mb-8">
        <h1 class="text-3xl sm:text-4xl font-bold text-sky-400 mb-4">📚 کتابخانه مانگا</h1>
        <p class="text-zinc-400 text-lg">مجموعه کاملی از بهترین مانگاها</p>
    </div>

    <!-- بخش جست‌وجو و فیلترها -->
    <div class="bg-zinc-800 rounded-xl p-6 mb-8 shadow-lg">
        <form method="GET" action="/mangas" class="space-y-6">
            <!-- جست‌وجو -->
            <div class="relative">
                <input type="text" name="search" value="<%= currentFilters.search %>" 
                       placeholder="جست‌وجو در عنوان، نویسنده یا هنرمند..." 
                       class="w-full bg-zinc-700 text-zinc-100 pl-12 pr-4 py-3 rounded-lg border border-zinc-600 focus:ring-2 focus:ring-sky-500 focus:border-transparent">
                <svg class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <!-- فیلتر وضعیت -->
                <div>
                    <label class="block text-sm font-medium text-zinc-300 mb-2">وضعیت انتشار</label>
                    <select name="status" class="w-full bg-zinc-700 text-zinc-100 py-2 px-3 rounded-md border border-zinc-600 focus:ring-2 focus:ring-sky-500">
                        <option value="">همه</option>
                        <option value="ongoing" <%= currentFilters.status === 'ongoing' ? 'selected' : '' %>>در حال انتشار</option>
                        <option value="completed" <%= currentFilters.status === 'completed' ? 'selected' : '' %>>تمام شده</option>
                        <option value="hiatus" <%= currentFilters.status === 'hiatus' ? 'selected' : '' %>>متوقف شده</option>
                    </select>
                </div>

                <!-- مرتب‌سازی -->
                <div>
                    <label class="block text-sm font-medium text-zinc-300 mb-2">مرتب‌سازی</label>
                    <select name="sort_by" class="w-full bg-zinc-700 text-zinc-100 py-2 px-3 rounded-md border border-zinc-600 focus:ring-2 focus:ring-sky-500">
                        <option value="updated_at_desc" <%= currentFilters.sort_by === 'updated_at_desc' ? 'selected' : '' %>>آخرین به‌روزرسانی</option>
                        <option value="created_at_desc" <%= currentFilters.sort_by === 'created_at_desc' ? 'selected' : '' %>>جدیدترین</option>
                        <option value="title_asc" <%= currentFilters.sort_by === 'title_asc' ? 'selected' : '' %>>بر اساس عنوان</option>
                        <option value="view_count_desc" <%= currentFilters.sort_by === 'view_count_desc' ? 'selected' : '' %>>محبوب‌ترین</option>
                    </select>
                </div>

                <!-- ژانرها -->
                <div>
                    <label class="block text-sm font-medium text-zinc-300 mb-2">ژانر</label>
                    <select name="genres" multiple class="w-full bg-zinc-700 text-zinc-100 py-2 px-3 rounded-md border border-zinc-600 focus:ring-2 focus:ring-sky-500" size="1">
                        <% allGenres.forEach(genre => { %>
                            <option value="<%= genre.id %>" <%= currentFilters.genres && currentFilters.genres.includes(genre.id.toString()) ? 'selected' : '' %>>
                                <%= genre.name %>
                            </option>
                        <% }); %>
                    </select>
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-3 justify-center">
                <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white font-semibold py-2 px-6 rounded-lg transition-colors flex items-center justify-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    جست‌وجو
                </button>
                <a href="/mangas" class="bg-zinc-600 hover:bg-zinc-700 text-white font-semibold py-2 px-6 rounded-lg transition-colors text-center">
                    پاک کردن فیلترها
                </a>
            </div>
        </form>
    </div>

    <!-- نتایج -->
    <% if (mangas && mangas.length > 0) { %>
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-xl font-semibold text-zinc-300">
                نتایج (<span class="text-sky-400"><%= mangas.length %></span> مانگا)
            </h2>
            <div class="text-sm text-zinc-400">
                صفحه <%= currentPage %> از <%= totalPages %>
            </div>
        </div>

        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4">
            <% mangas.forEach(manga => { %>
                <div class="bg-zinc-800 rounded-lg overflow-hidden shadow-lg hover:shadow-xl hover:shadow-sky-500/20 transition-all duration-300 group">
                    <a href="/manga/<%= manga.id %>" class="block">
                        <div class="aspect-[2/3] w-full overflow-hidden relative">
                            <img src="<%= manga.cover_image_url || 'https://placehold.co/300x450/27272a/e4e4e7?text=کاور' %>"
                                 alt="[کاور <%= manga.title %>]" 
                                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" 
                                 loading="lazy">
                            
                            <!-- وضعیت -->
                            <div class="absolute top-2 right-2">
                                <span class="px-2 py-1 rounded-full text-xs font-semibold 
                                    <%= manga.status === 'ongoing' ? 'bg-green-500/80 text-white' : 
                                        manga.status === 'completed' ? 'bg-blue-500/80 text-white' : 
                                        'bg-yellow-500/80 text-black' %>">
                                    <%= manga.status === 'ongoing' ? 'ادامه‌دار' : 
                                        manga.status === 'completed' ? 'تمام' : 
                                        'توقف' %>
                                </span>
                            </div>

                            <!-- آخرین قسمت -->
                            <% if (manga.latest_chapter_number) { %>
                                <div class="absolute bottom-2 right-2 bg-black/70 text-white px-2 py-1 rounded text-xs">
                                    قسمت <%= manga.latest_chapter_number %>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="p-3">
                            <h3 class="text-sm font-semibold text-zinc-100 group-hover:text-sky-400 transition-colors line-clamp-2 mb-2" 
                                title="<%= manga.title %>">
                                <%= manga.title %>
                            </h3>
                            
                            <% if (manga.source_channel_name) { %>
                                <p class="text-xs text-zinc-400 truncate">
                                    منبع: <%= manga.source_channel_name %>
                                </p>
                            <% } %>
                            
                            <div class="flex items-center justify-between mt-2 text-xs text-zinc-500">
                                <span class="flex items-center gap-1">
                                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                                        <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                                    </svg>
                                    <%= (manga.view_count || 0).toLocaleString('fa-IR') %>
                                </span>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>

        <!-- صفحه‌بندی -->
        <% if (totalPages > 1) { %>
            <div class="mt-12 flex justify-center">
                <nav class="flex items-center space-x-2 space-x-reverse">
                    <% if (currentPage > 1) { %>
                        <a href="/mangas?p=<%= currentPage - 1 %><%= Object.keys(currentFilters).map(key => currentFilters[key] ? `&${key}=${encodeURIComponent(currentFilters[key])}` : '').join('') %>" 
                           class="px-4 py-2 bg-zinc-700 text-zinc-200 rounded-md hover:bg-zinc-600 transition-colors">
                            &laquo; قبلی
                        </a>
                    <% } %>
                    
                    <% 
                        let startPage = Math.max(1, currentPage - 2);
                        let endPage = Math.min(totalPages, currentPage + 2);
                        
                        if (startPage > 1) { %>
                            <a href="/mangas?p=1<%= Object.keys(currentFilters).map(key => currentFilters[key] ? `&${key}=${encodeURIComponent(currentFilters[key])}` : '').join('') %>" 
                               class="px-4 py-2 bg-zinc-700 text-zinc-200 rounded-md hover:bg-zinc-600 transition-colors">1</a>
                            <% if (startPage > 2) { %>
                                <span class="px-2 text-zinc-500">...</span>
                            <% } %>
                        <% } %>
                        
                        <% for (let i = startPage; i <= endPage; i++) { %>
                            <% if (i === currentPage) { %>
                                <span class="px-4 py-2 bg-sky-500 text-white rounded-md font-semibold"><%= i %></span>
                            <% } else { %>
                                <a href="/mangas?p=<%= i %><%= Object.keys(currentFilters).map(key => currentFilters[key] ? `&${key}=${encodeURIComponent(currentFilters[key])}` : '').join('') %>" 
                                   class="px-4 py-2 bg-zinc-700 text-zinc-200 rounded-md hover:bg-zinc-600 transition-colors"><%= i %></a>
                            <% } %>
                        <% } %>
                        
                        <% if (endPage < totalPages) { %>
                            <% if (endPage < totalPages - 1) { %>
                                <span class="px-2 text-zinc-500">...</span>
                            <% } %>
                            <a href="/mangas?p=<%= totalPages %><%= Object.keys(currentFilters).map(key => currentFilters[key] ? `&${key}=${encodeURIComponent(currentFilters[key])}` : '').join('') %>" 
                               class="px-4 py-2 bg-zinc-700 text-zinc-200 rounded-md hover:bg-zinc-600 transition-colors"><%= totalPages %></a>
                        <% } %>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="/mangas?p=<%= currentPage + 1 %><%= Object.keys(currentFilters).map(key => currentFilters[key] ? `&${key}=${encodeURIComponent(currentFilters[key])}` : '').join('') %>" 
                           class="px-4 py-2 bg-zinc-700 text-zinc-200 rounded-md hover:bg-zinc-600 transition-colors">
                            بعدی &raquo;
                        </a>
                    <% } %>
                </nav>
            </div>
        <% } %>

    <% } else { %>
        <div class="text-center py-16">
            <svg class="w-24 h-24 text-zinc-600 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
            </svg>
            <h2 class="text-2xl font-bold text-zinc-400 mb-4">هیچ مانگایی یافت نشد</h2>
            <p class="text-zinc-500 mb-6">متأسفانه با فیلترهای انتخابی شما هیچ نتیجه‌ای پیدا نشد.</p>
            <a href="/mangas" class="bg-sky-500 hover:bg-sky-600 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
                مشاهده همه مانگاها
            </a>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>
