                    `;
                }

                const spoilerContentClass = comment.is_spoiler ? 'hidden-by-spoiler' : 'visible';
                const spoilerBlock = comment.is_spoiler ? `<div class="spoiler-overlay"><p class="font-bold text-yellow-400">Ø§ÛŒÙ† Ù†Ø¸Ø± Ø­Ø§ÙˆÛŒ Ø§Ø³Ù¾ÙˆÛŒÙ„Ø± Ø§Ø³Øª</p><p class="text-xs text-zinc-400 mt-1">Ø¨Ø±Ø§ÛŒ Ù†Ù…Ø§ÛŒØ´ØŒ Ø±ÙˆÛŒ Ø¯Ú©Ù…Ù‡ Ø²ÛŒØ± Ú©Ù„ÛŒÚ© Ú©Ù†ÛŒØ¯</p><button class="show-spoiler-btn text-white bg-yellow-600 hover:bg-yellow-700 text-sm font-semibold mt-3 py-1 px-4 rounded-md">Ù†Ù…Ø§ÛŒØ´ Ù†Ø¸Ø±</button></div>` : '';
                const showRepliesButton = comment.replies && comment.replies.length > 0 ? `<button class="replies-toggle text-xs font-semibold text-sky-400 hover:text-sky-300 mt-3" data-reply-count="${comment.replies.length}">Ù†Ù…Ø§ÛŒØ´ ${comment.replies.length} Ù¾Ø§Ø³Ø®</button>` : '';
                
                const commentDiv = document.createElement('div');
                commentDiv.className = "flex-grow";
                commentDiv.innerHTML = `
                    <div class="bg-zinc-900/50 rounded-lg p-3">
                        <div class="flex justify-between items-center mb-2">
                            <div class="flex items-center gap-2">
                                <span class="font-semibold text-white"></span>
